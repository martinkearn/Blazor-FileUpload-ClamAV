@page "/"
@inject IConfiguration Configuration

<h1>File Upload with ClamAV</h1>

<p>This sample combines <a href="https://blog.stevensanderson.com/2019/09/13/blazor-inputfile/">BlazorInputFile</a> with <a href="https://github.com/tekmaven/nClam">nClam</a> to do a file upload with virus check.</p>

<input type="text" @bind-value="server" placeholder="ClamAV server." />
<br />
<InputFile OnChange="HandleFileSelected" />
<br />

@if (file != null)
{
    <p>Name: @file.Name</p>
    <p>Size in bytes: @file.Size</p>
    <p>Last modified date: @file.LastModified.ToShortDateString()</p>
    <p>Content type (not always supplied by the browser): @file.Type</p>
    <p>ClamAV scan status: @scanStatus</p>
}

@code {
    IFileListEntry file;
    string scanStatus;
    string server;

    async Task HandleFileSelected(IFileListEntry[] files)
    {
        file = files.FirstOrDefault();

        // Scan with nClam
        var serverName = (string.IsNullOrEmpty(server)) ?
            Configuration["ClamAVServerName"] :
            server;
        var clam = new ClamClient(serverName, 3310);
        var scanResult = await clam.SendAndScanFileAsync(file.Data);
        switch (scanResult.Result)
        {
            case ClamScanResults.Clean:
                scanStatus = $"File is clean according to {serverName}";
                break;
            case ClamScanResults.VirusDetected:
                scanStatus = $"File is infected according to {serverName}";
                break;
            case ClamScanResults.Error:
                scanStatus = $"File scan produced an error from {serverName}";
                break;
            case ClamScanResults.Unknown:
                scanStatus = $"File scan produced an unknown status from {serverName}";
                break;
        }
    }
}